<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment">

    <TextView android:id="@+id/section_label" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Driver Ability"
        android:id="@+id/driverAbility_label"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Robot Structure"
        android:id="@+id/robotStructure_label"
        android:layout_below="@+id/section_label"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Durability"
        android:id="@+id/durability_label"
        android:layout_below="@+id/robotStructure_label"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Autonomous Score"
        android:id="@+id/autonomousScore_label"
        android:layout_below="@+id/durability_label"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Autonomous Consistency"
        android:id="@+id/autonomousConsistency_label"
        android:layout_below="@+id/autonomousScore_label"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tele-OP Score"
        android:id="@+id/teleOpScore_label"
        android:layout_below="@+id/autonomousConsistency_label"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tele-OP Consistency"
        android:id="@+id/teleOpConsistency_label"
        android:layout_below="@+id/teleOpScore_label"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End Game Score"
        android:id="@+id/endGameScore_label"
        android:layout_below="@+id/teleOpConsistency_label"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End Game Consistency"
        android:id="@+id/endGameConsistency_label"
        android:layout_below="@+id/endGameScore_label"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Push Bot?"
        android:id="@+id/pushBot_label"
        android:layout_below="@+id/endGameConsistency_label"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alliance total Score"
        android:id="@+id/allianceTotalScore_label"
        android:layout_below="@+id/pushBot_label"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team Number:"
        android:id="@+id/name_label"
        android:layout_below="@+id/allianceTotalScore_label"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/driverAbility_field"
        android:layout_alignBottom="@+id/driverAbility_label"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="24dp"
        android:numeric="integer" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/robotStructure_field"
        android:layout_alignBottom="@+id/robotStructure_label"
        android:numeric="integer"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/durability_field"
        android:numeric="integer"
        android:layout_alignBottom="@+id/durability_label"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/autonomousScore_field"
        android:numeric="integer"
        android:layout_alignBottom="@+id/autonomousScore_label"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/autonomousConsistency_field"
        android:layout_above="@+id/robotStructure_label"
        android:numeric="integer"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/autonomousConsistency_label"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/teleOpScore_field"
        android:layout_alignBottom="@+id/teleOpScore_label"
        android:numeric="integer"
        android:layout_alignParentEnd="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/teleOpConsistency_field"
        android:layout_alignBottom="@+id/teleOpConsistency_label"
        android:numeric="integer"
        android:layout_alignParentEnd="true"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/endGameScore_field"
        android:layout_alignParentEnd="true"
        android:numeric="integer"
        android:layout_alignBottom="@+id/endGameScore_label"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/endGameConsistency_field"
        android:layout_alignParentEnd="true"
        android:numeric="integer"
        android:layout_alignBottom="@+id/endGameConsistency_label"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/allianceTotalScore_field"
        android:numeric="integer"
        android:layout_alignBottom="@+id/allianceTotalScore_label"
        android:layout_alignParentEnd="true" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name_field"
        android:text="####"
        android:numeric="integer"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/allianceTotalScore_label" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Match"
        android:id="@+id/addMatch"
        android:layout_alignParentBottom="true"
        android:onClick="addScore"
        android:layout_toEndOf="@+id/teleOpConsistency_label" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ClearFields"
        android:id="@+id/clearFields"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:onClick="clearFields" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pushBot"
        android:layout_alignTop="@+id/pushBot_label"
        android:layout_alignParentEnd="true"
        android:checked="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="   Reset   "
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/autonomousScore_label"
        android:onClick="reset" />

</RelativeLayout>
