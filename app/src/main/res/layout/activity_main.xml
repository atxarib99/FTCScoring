<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment">


    <TabHost
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tabHost"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></TabWidget>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/MatchScouting"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Red Alliance"
                        android:id="@+id/textView"
                        android:background="@android:color/holo_red_dark"
                        android:textColor="@android:color/white"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true" />

                    <EditText
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/team1"
                        android:numeric="integer"
                        android:text="Team 1 #"
                        android:layout_marginTop="20dp"
                        android:layout_below="@+id/textView"
                        android:layout_alignParentStart="true" />

                    <EditText
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/team2"
                        android:numeric="integer"
                        android:text="Team 2 #"
                        android:layout_alignBaseline="@+id/team1"
                        android:layout_alignBottom="@+id/team1"
                        android:layout_alignParentEnd="true" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/editText"
                        android:layout_below="@+id/team1"
                        android:layout_centerHorizontal="true"
                        android:numeric="integer"
                        android:text="Red Alliance Score" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Blue Alliance"
                        android:numeric="integer"
                        android:background="@android:color/holo_blue_dark"
                        android:textColor="@android:color/white"
                        android:id="@+id/textView2"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/editText2"
                        android:numeric="integer"
                        android:layout_below="@+id/textView2"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="20dp"
                        android:layout_alignEnd="@+id/team1"
                        android:text="Team 1 #" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/editText3"
                        android:numeric="integer"
                        android:layout_alignBottom="@+id/editText2"
                        android:layout_alignParentEnd="true"
                        android:layout_toEndOf="@+id/textView"
                        android:layout_alignStart="@+id/team2"
                        android:text="Team 2 #" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/editText4"
                        android:numeric="integer"
                        android:layout_below="@+id/editText3"
                        android:layout_centerHorizontal="true"
                        android:text="Blue Alliance Score" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/PitScouting"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView android:id="@+id/section_label" android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Robot Structure"
                        android:numeric="integer"
                        android:id="@+id/robotStructure_label"
                        android:layout_below="@+id/section_label"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="2dp" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numeric="integer"
                        android:text="Autonomous Score"
                        android:id="@+id/autonomousScore_label"
                        android:layout_below="@+id/durability_label"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="2dp" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Autonomous Consistency"
                        android:numeric="integer"
                        android:id="@+id/autonomousConsistency_label"
                        android:layout_below="@+id/autonomousScore_label"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="2dp" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tele-OP Score"
                        android:id="@+id/teleOpScore_label"
                        android:numeric="integer"
                        android:layout_below="@+id/autonomousConsistency_label"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="2dp" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tele-OP Consistency"
                        android:numeric="integer"
                        android:id="@+id/teleOpConsistency_label"
                        android:layout_below="@+id/teleOpScore_label"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="2dp"/>

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="End Game Score"
                        android:numeric="integer"
                        android:id="@+id/endGameScore_label"
                        android:layout_below="@+id/teleOpConsistency_label"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="2dp" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="End Game Consistency"
                        android:id="@+id/endGameConsistency_label"
                        android:numeric="integer"
                        android:layout_below="@+id/endGameScore_label"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="2dp"
                        />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Team Number:"
                        android:numeric="integer"
                        android:id="@+id/name_label"
                        android:layout_below="@+id/allianceTotalScore_label"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="2dp"/>

                    <Button
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:text="Add Match"
                        android:id="@+id/addMatch"
                        android:layout_alignParentBottom="true"
                        android:onClick="addScore"
                        android:layout_toEndOf="@+id/teleOpConsistency_label" />

                </LinearLayout>


            </FrameLayout>
        </LinearLayout>
    </TabHost>
</RelativeLayout>
